{
  "name": "FlowrSpot",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "axios": "^0.19.1",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-dom": "^16.12.0",
    "react-native": "0.61.5",
    "react-native-gesture-handler": "^1.5.3",
    "react-native-reanimated": "^1.4.0",
    "react-native-screens": "^1.0.0-alpha.23",
    "react-navigation": "^4.0.10",
    "react-navigation-drawer": "^2.3.3",
    "react-navigation-stack": "^1.10.3",
    "react-navigation-tabs": "^2.7.0",
    "react-redux": "^7.1.3",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.7",
    "@babel/runtime": "7.7.7",
    "@react-native-community/eslint-config": "0.0.6",
    "@react-native-community/eslint-plugin": "^1.0.0",
    "babel-jest": "24.9.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "6.8.0",
    "eslint-config-recommended": "^4.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.3.0",
    "husky": "^4.0.6",
    "jest": "24.9.0",
    "lint-staged": "^8.2.1",
    "metro-react-native-babel-preset": "0.56.4",
    "react-test-renderer": "16.12.0",
    "redux-mock-store": "^1.5.4"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup/enzymeSetup.js",
      "<rootDir>/__tests__/setup/logSetup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/__mocks__/",
      "<rootDir>/__tests__/setup/",
      "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation)"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/app/services/navigation",
      "<rootDir>/app/services/api",
      "<rootDir>/app/store/configureStore",
      "<rootDir>/app/store/middlewares",
      "<rootDir>/app/store/sagas/rootSaga",
      "<rootDir>/app/store/reducers/rootReducer",
      "<rootDir>/app/models"
    ]
  }
}
